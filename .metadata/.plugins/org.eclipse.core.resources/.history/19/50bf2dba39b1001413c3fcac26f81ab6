PREFIX ex: <http://example.com/0.1/>

[CONSTRUCT {
  ex:s1 ex:type ex:seating .
  ex:s1 ex:seat1 ?n1 .
} WHERE {
  ?p1 ex:type ex:guest .
  ?p1 ex:name ?n1 .
} ]

[ DELETE {
  ex:s1 ex:type ex:seating .
  ex:s1 ex:seat1 ?n1 .
} WHERE {
  ?p1 ex:type ex:guest .
  ?p1 ex:name ?n1 .
  FILTER(?n1 != "Kate") .
} ]

[ DELETE {
  ex:var ex:value ?x .
} INSERT {
  ex:var ex:value2 ?y .
} WHERE {
  ex:var ex:value ?x .
  BIND(?x + 1 AS ?y) .
} ]

[ CONSTRUCT {
   ex:var ex:value3 0 .
} WHERE {
  							ex:var ex:value ?y .
  OPTIONAL {
    ex:var ex:value3 ?x .
  } FILTER(!?x)
} ]